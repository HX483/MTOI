<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.order.mapper.OrderMainMapper">
    
    <resultMap type="OrderMain" id="OrderMainResult">
        <result property="orderId"    column="order_id"    />
        <result property="orderNo"    column="order_no"    />
        <result property="customerId"    column="customer_id"    />
        <result property="customerName"    column="customer_name"    />
        <result property="customerPhone"    column="customer_phone"    />
        <result property="totalAmount"    column="total_amount"    />
        <result property="actualAmount"    column="actual_amount"    />
        <result property="discountAmount"    column="discount_amount"    />
        <result property="orderType"    column="order_type"    />
        <result property="status"    column="status"    />
        <result property="paymentStatus"    column="payment_status"    />
        <result property="paymentType"    column="payment_type"    />
        <result property="tableNo"    column="table_no"    />
        <result property="deliveryAddress"    column="delivery_address"    />
        <result property="remark"    column="remark"    />
        <result property="operatorId"    column="operator_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="paymentTime"    column="payment_time"    />
        <result property="completionTime"    column="completion_time"    />
    </resultMap>

    <resultMap id="OrderMainOrderDetailResult" type="OrderMain" extends="OrderMainResult">
        <collection property="orderDetailList" ofType="OrderDetail" column="order_id" select="selectOrderDetailList" />
    </resultMap>

    <resultMap type="OrderDetail" id="OrderDetailResult">
        <result property="detailId"    column="detail_id"    />
        <result property="orderId"    column="order_id"    />
        <result property="productId"    column="product_id"    />
        <result property="productName"    column="product_name"    />
        <result property="quantity"    column="quantity"    />
        <result property="price"    column="price"    />
        <result property="subtotal"    column="subtotal"    />
        <result property="customization"    column="customization"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectOrderMainVo">
        select order_id, order_no, customer_id, customer_name, customer_phone, total_amount, actual_amount, discount_amount, order_type, status, payment_status, payment_type, table_no, delivery_address, remark, operator_id, create_time, update_time, payment_time, completion_time from order_main
    </sql>

    <select id="selectOrderMainList" parameterType="OrderMain" resultMap="OrderMainResult">
        <include refid="selectOrderMainVo"/>
        <where>  
            <if test="orderNo != null  and orderNo != ''"> and order_no = #{orderNo}</if>
            <if test="customerName != null  and customerName != ''"> and customer_name like concat('%', #{customerName}, '%')</if>
            <if test="totalAmount != null "> and total_amount = #{totalAmount}</if>
            <if test="orderType != null "> and order_type = #{orderType}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="paymentStatus != null "> and payment_status = #{paymentStatus}</if>
            <if test="paymentType != null "> and payment_type = #{paymentType}</if>
            <if test="tableNo != null  and tableNo != ''"> and table_no = #{tableNo}</if>
            <if test="deliveryAddress != null  and deliveryAddress != ''"> and delivery_address = #{deliveryAddress}</if>
            <if test="paymentTime != null "> and date(payment_time)= date(#{paymentTime})</if>
            <if test="completionTime != null "> and date(completion_time) = date(#{completionTime})</if>
        </where>
    </select>
    
    <select id="selectOrderMainByOrderId" parameterType="Long" resultMap="OrderMainOrderDetailResult">
        select order_id, order_no, customer_id, customer_name, customer_phone, total_amount, actual_amount, discount_amount, order_type, status, payment_status, payment_type, table_no, delivery_address, remark, operator_id, create_time, update_time, payment_time, completion_time
        from order_main
        where order_id = #{orderId}
    </select>

    <select id="selectOrderDetailList" resultMap="OrderDetailResult">
        select detail_id, order_id, product_id, product_name, quantity, price, subtotal, customization, create_time
        from order_detail
        where order_id = #{order_id}
    </select>

    <insert id="insertOrderMain" parameterType="OrderMain" useGeneratedKeys="true" keyProperty="orderId">
        insert into order_main
        <trim prefix="(" suffix=")" suffixOverrides=",">
            order_no,
            <if test="customerId != null">customer_id,</if>
            customer_name,
            customer_phone,
            total_amount,
            actual_amount,
            <if test="discountAmount != null">discount_amount,</if>
            order_type,
            status,
            payment_status,
            <if test="paymentType != null">payment_type,</if>
            <if test="tableNo != null">table_no,</if>
            <if test="deliveryAddress != null">delivery_address,</if>
            <if test="remark != null">remark,</if>
            <if test="operatorId != null">operator_id,</if>
            create_time,
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{orderNo},
            <if test="customerId != null">#{customerId},</if>
            #{customerName},
            #{customerPhone},
            #{totalAmount},
            #{actualAmount},
            <if test="discountAmount != null">#{discountAmount},</if>
            #{orderType},
            #{status},
            #{paymentStatus},
            <if test="paymentType != null">#{paymentType},</if>
            <if test="tableNo != null">#{tableNo},</if>
            <if test="deliveryAddress != null">#{deliveryAddress},</if>
            <if test="remark != null">#{remark},</if>
            <if test="operatorId != null">#{operatorId},</if>
            #{createTime},
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateOrderMain" parameterType="OrderMain">
        update order_main
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderNo != null and orderNo != ''">order_no = #{orderNo},</if>
            <if test="customerId != null">customer_id = #{customerId},</if>
            <if test="customerName != null and customerName != ''">customer_name = #{customerName},</if>
            <if test="customerPhone != null and customerPhone != ''">customer_phone = #{customerPhone},</if>
            <if test="totalAmount != null">total_amount = #{totalAmount},</if>
            <if test="actualAmount != null">actual_amount = #{actualAmount},</if>
            <if test="discountAmount != null">discount_amount = #{discountAmount},</if>
            <if test="orderType != null">order_type = #{orderType},</if>
            <if test="status != null">status = #{status},</if>
            <if test="paymentStatus != null">payment_status = #{paymentStatus},</if>
            <if test="paymentType != null">payment_type = #{paymentType},</if>
            <if test="tableNo != null">table_no = #{tableNo},</if>
            <if test="deliveryAddress != null">delivery_address = #{deliveryAddress},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="operatorId != null">operator_id = #{operatorId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime !=null"> update_time = #{updateTime},</if>
            <if test="paymentTime != null">payment_time = #{paymentTime},</if>
            <if test="completionTime != null">completion_time = #{completionTime},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteOrderMainByOrderId" parameterType="Long">
        delete from order_main where order_id = #{orderId}
    </delete>

    <delete id="deleteOrderMainByOrderIds" parameterType="String">
        delete from order_main where order_id in 
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>
    
    <delete id="deleteOrderDetailByOrderIds" parameterType="String">
        delete from order_detail where order_id in 
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>

    <delete id="deleteOrderDetailByOrderId" parameterType="Long">
        delete from order_detail where order_id = #{orderId}
    </delete>

    <insert id="batchOrderDetail">
        insert into order_detail( detail_id, order_id, product_id, product_name, quantity, price, subtotal, customization, create_time) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.detailId}, #{item.orderId}, #{item.productId}, #{item.productName}, #{item.quantity}, #{item.price}, #{item.subtotal}, #{item.customization}, #{item.createTime})
        </foreach>
    </insert>
</mapper>