<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.purchase.mapper.PurchaseOrderMapper">
    
    <resultMap type="PurchaseOrder" id="PurchaseOrderResult">
        <result property="purchaseId"    column="purchase_id"    />
        <result property="purchaseNo"    column="purchase_no"    />
        <result property="supplierId"    column="supplier_id"    />
        <result property="totalAmount"    column="total_amount"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="creatorId"    column="creator_id"    />
        <result property="auditorId"    column="auditor_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="auditTime"    column="audit_time"    />
        <result property="completionTime"    column="completion_time"    />
    </resultMap>

    <resultMap id="PurchaseOrderPurchaseDetailResult" type="PurchaseOrder" extends="PurchaseOrderResult">
        <collection property="purchaseDetailList" ofType="PurchaseDetail" column="purchase_id" select="selectPurchaseDetailList" />
    </resultMap>

    <resultMap type="PurchaseDetail" id="PurchaseDetailResult">
        <result property="detailId"    column="detail_id"    />
        <result property="purchaseId"    column="purchase_id"    />
        <result property="materialId"    column="material_id"    />
        <result property="materialName"    column="material_name"    />
        <result property="specification"    column="specification"    />
        <result property="unit"    column="unit"    />
        <result property="quantity"    column="quantity"    />
        <result property="unitPrice"    column="unit_price"    />
        <result property="amount"    column="amount"    />
        <result property="actualQuantity"    column="actual_quantity"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPurchaseOrderVo">
        select purchase_id, purchase_no, supplier_id, total_amount, status, remark, creator_id, auditor_id, create_time, update_time, audit_time, completion_time from purchase_order
    </sql>

    <select id="selectPurchaseOrderList" parameterType="PurchaseOrder" resultMap="PurchaseOrderResult">
        <include refid="selectPurchaseOrderVo"/>
        <where>  
            <if test="purchaseNo != null  and purchaseNo != ''"> and purchase_no = #{purchaseNo}</if>
            <if test="supplierId != null "> and supplier_id = #{supplierId}</if>
            <if test="totalAmount != null "> and total_amount = #{totalAmount}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="auditTime != null "> and date(audit_time) = date(#{auditTime})</if>
            <if test="completionTime != null "> and completion_time = #{completionTime}</if>
        </where>
    </select>
    
    <select id="selectPurchaseOrderByPurchaseId" parameterType="Long" resultMap="PurchaseOrderPurchaseDetailResult">
        select purchase_id, purchase_no, supplier_id, total_amount, status, remark, creator_id, auditor_id, create_time, update_time, audit_time, completion_time
        from purchase_order
        where purchase_id = #{purchaseId}
    </select>

    <select id="selectPurchaseDetailList" resultMap="PurchaseDetailResult">
        select detail_id, purchase_id, material_id, material_name, specification, unit, quantity, unit_price, amount, actual_quantity, create_time, update_time
        from purchase_detail
        where purchase_id = #{purchase_id}
    </select>

    <insert id="insertPurchaseOrder" parameterType="PurchaseOrder" useGeneratedKeys="true" keyProperty="purchaseId">
        insert into purchase_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="purchaseNo != null and purchaseNo != ''">purchase_no,</if>
            <if test="supplierId != null">supplier_id,</if>
            <if test="totalAmount != null">total_amount,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="creatorId != null">creator_id,</if>
            <if test="auditorId != null">auditor_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="auditTime != null">audit_time,</if>
            <if test="completionTime != null">completion_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="purchaseNo != null and purchaseNo != ''">#{purchaseNo},</if>
            <if test="supplierId != null">#{supplierId},</if>
            <if test="totalAmount != null">#{totalAmount},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="creatorId != null">#{creatorId},</if>
            <if test="auditorId != null">#{auditorId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="auditTime != null">#{auditTime},</if>
            <if test="completionTime != null">#{completionTime},</if>
         </trim>
    </insert>

    <update id="updatePurchaseOrder" parameterType="PurchaseOrder">
        update purchase_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="purchaseNo != null and purchaseNo != ''">purchase_no = #{purchaseNo},</if>
            <if test="supplierId != null">supplier_id = #{supplierId},</if>
            <if test="totalAmount != null">total_amount = #{totalAmount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="creatorId != null">creator_id = #{creatorId},</if>
            <if test="auditorId != null">auditor_id = #{auditorId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="auditTime != null">audit_time = #{auditTime},</if>
            <if test="completionTime != null">completion_time = #{completionTime},</if>
        </trim>
        where purchase_id = #{purchaseId}
    </update>

    <delete id="deletePurchaseOrderByPurchaseId" parameterType="Long">
        delete from purchase_order where purchase_id = #{purchaseId}
    </delete>

    <delete id="deletePurchaseOrderByPurchaseIds" parameterType="String">
        delete from purchase_order where purchase_id in 
        <foreach item="purchaseId" collection="array" open="(" separator="," close=")">
            #{purchaseId}
        </foreach>
    </delete>
    
    <delete id="deletePurchaseDetailByPurchaseIds" parameterType="String">
        delete from purchase_detail where purchase_id in 
        <foreach item="purchaseId" collection="array" open="(" separator="," close=")">
            #{purchaseId}
        </foreach>
    </delete>

    <delete id="deletePurchaseDetailByPurchaseId" parameterType="Long">
        delete from purchase_detail where purchase_id = #{purchaseId}
    </delete>

    <insert id="batchPurchaseDetail">
        insert into purchase_detail( detail_id, purchase_id, material_id, material_name, specification, unit, quantity, unit_price, amount, actual_quantity, create_time, update_time) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.detailId}, #{item.purchaseId}, #{item.materialId}, #{item.materialName}, #{item.specification}, #{item.unit}, #{item.quantity}, #{item.unitPrice}, #{item.amount}, #{item.actualQuantity}, #{item.createTime}, #{item.updateTime})
        </foreach>
    </insert>
</mapper>